{
  "name": "cargo-runner",
  "displayName": "Cargo Runner",
  "description": "10X Rust Developer Tool to Run, Build, or Test without Mental Overhead",
  "publisher": "masterustacean",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/codeitlikemiley/cargo-runner"
  },
  "version": "1.3.3",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cargo-runner.exec",
        "title": "Cargo Runner"
      },
      {
        "command": "cargo-runner.addArgs",
        "title": "Add Cargo Runner Args"
      }
    ],
    "keybindings": [
      {
        "command": "cargo-runner.exec",
        "key": "ctrl+r",
        "mac": "cmd+r",
        "when": "resourceFilename =~ /\\.(rs)$/ && editorTextFocus && editorLangId == rust && editorHasDefinitionProvider"
      },
      {
        "command": "cargo-runner.addArgs",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r",
        "when": "editorTextFocus && editorLangId == rust"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "^18.19.33",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.56.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "@types/iarna__toml": "^2.0.5"
  }
}
