{
  "name": "cargo-runner",
  "displayName": "Cargo Runner",
  "description": "#1 Rust Productivity Tool to quickly run , test, debug and bench your Rust project.",
  "publisher": "masterustacean",
  "icon": "images/icon.jpg",
  "repository": {
    "type": "git",
    "url": "https://github.com/codeitlikemiley/cargo-runner"
  },
  "version": "1.5.4",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:rust"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Cargo Runner",
      "properties": {
        "cargoRunner.prioritySymbolKinds": {
          "type": "array",
          "default": [
            "Function",
            "Enum",
            "Struct",
            "Object",
            "Module"
          ],
          "description": "Symbol kinds to prioritize for CodeLens actions",
          "items": {
            "type": "string",
            "enum": [
              "Module",
              "Object",
              "Struct",
              "Enum",
              "Function"
            ]
          }
        },
        "cargoRunner.logLevel": {
          "type": "string",
          "default": "error",
          "description": "Set the logging level for Cargo Runner",
          "enum": [
            "debug",
            "info",
            "error"
          ]
        },
        "cargoRunner.cargoHome": {
          "type": "string",
          "default": "",
          "description": "Path to Cargo home directory. If not set, defaults to CARGO_HOME environment variable or ~/.cargo"
        },
        "cargoRunner.nextest.enable": {
          "type": "boolean",
          "default": false,
          "description": "Enable cargo-nextest integration"
        }
      }
    },
    "taskDefinitions": [
      {
        "type": "cargo-runner",
        "required": [
          "command",
          "title"
        ],
        "properties": {
          "command": {
            "type": "string",
            "description": "The cargo command to execute."
          },
          "title": {
            "type": "string",
            "description": "The title of the task."
          }
        }
      }
    ],
    "commands": [
      {
        "command": "cargo.runner",
        "title": "Cargo Runner"
      },
      {
        "command": "cargo.rust-analyzer.config",
        "title": "Cargo Runner: Override Config"
      }
    ],
    "keybindings": [
      {
        "command": "cargo.runner",
        "key": "ctrl+r",
        "mac": "cmd+r",
        "when": "resourceFilename =~ /\\.(rs)$/ && editorTextFocus && editorLangId == rust && editorHasDefinitionProvider"
      },
      {
        "command": "cargo.rust-analyzer.config",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "^18.19.33",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.56.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "@types/iarna__toml": "^2.0.5"
  }
}